{
    "name": "@lapidist/components",
    "version": "0.0.0",
    "description": "Lapidist components",
    "author": "Brett Dorrans <hello@lapidist.net>",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/bylapidist/components.git"
    },
    "bugs": {
        "url": "https://github.com/bylapidist/components/issues"
    },
    "homepage": "https://github.com/bylapidist/components#readme",
    "keywords": [
        "react",
        "components",
        "component library",
        "lapidist"
    ],
    "publishConfig": {
        "access": "public"
    },
    "type": "module",
    "files": [
        "dist"
    ],
    "main": "./dist/lapidist.umd.js",
    "module": "./dist/lapidist.es.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/lapidist.es.js",
            "require": "./dist/lapidist.umd.js"
        }
    },
    "scripts": {
        "storybook": "sb dev",
        "build": "tsc && vite build",
        "build:storybook": "sb build",
        "lint": "npm run lint:js && npm run lint:css",
        "lint:js": "eslint . --ext js,cjs,ts,tsx",
        "lint:css": "stylelint './src/**/*.module.css'",
        "fix": "eslint --fix . --ext js,cjs,ts,tsx",
        "watch": "tsc -w",
        "watch:tests": "jest --watch",
        "test": "npm run lint && npm run test:typecheck && npm run test:unit",
        "test:typecheck": "tsc --noEmit -p tsconfig.json",
        "test:unit": "jest --coverage",
        "update:snapshots": "jest -u"
    },
    "dependencies": {
        "@lapidist/styles": "^4.0.0",
        "classnames": "^2.3.2",
        "react": "18.x",
        "react-dom": "18.x"
    },
    "devDependencies": {
        "@babel/core": "^7.19.3",
        "@lapidist/linting": "^3.0.5",
        "@storybook/addon-actions": "^7.0.0-alpha.37",
        "@storybook/addon-essentials": "^7.0.0-alpha.37",
        "@storybook/addon-links": "^7.0.0-alpha.37",
        "@storybook/cli": "^7.0.0-alpha.37",
        "@storybook/react-vite": "^7.0.0-alpha.37",
        "@testing-library/jest-dom": "^5.16.5",
        "@testing-library/react": "^13.4.0",
        "@types/jest": "^29.1.2",
        "@types/react": "^18.0.21",
        "@types/react-dom": "^18.0.6",
        "@vitejs/plugin-react": "^2.1.0",
        "babel-loader": "^8.2.5",
        "husky": "^8.0.1",
        "identity-obj-proxy": "^3.0.0",
        "jest": "^29.2.0",
        "jest-environment-jsdom": "^29.2.0",
        "lint-staged": "^13.0.3",
        "ts-jest": "^29.0.3",
        "typescript": "^4.8.4",
        "vite": "^3.1.8",
        "vite-plugin-dts": "^1.6.6"
    },
    "peerDependencies": {
        "react": "18.x",
        "react-dom": "18.x"
    },
    "engines": {
        "node": "^16.0.0"
    },
    "husky": {
        "hooks": {
            "pre-commit": "tsc --noEmit && lint-staged"
        }
    }
}
