{
    "name": "@lapidist/components",
    "version": "0.0.0",
    "description": "Lapidist components monorepo",
    "author": "Brett Dorrans <hello@lapidist.net>",
    "license": "MIT",
    "private": true,
    "scripts": {
        "create-component": "yarn plop",
        "prepare": "lerna bootstrap",
        "lint": "eslint . --ext js,ts,tsx",
        "fix": "eslint --fix . --ext js,ts,tsx",
        "watch": "tsc -p tsconfig.dev.json -w",
        "watch:tests": "lerna exec --stream -- jest --watch --no-coverage",
        "build": "lerna run build --stream",
        "test": "lerna run test --stream",
        "snapshots": "yarn test -- -- -u",
        "semantic-release": "npm i --no-save semantic-release @lapidist/semantic-release-monorepo && lerna exec --concurrency 1 -- npx semantic-release -e @lapidist/semantic-release-monorepo"
    },
    "workspaces": [
        "packages/*"
    ],
    "dependencies": {
        "@lapidist/design-tokens": "^1.12.0",
        "@lapidist/theme-provider": "^1.19.0",
        "react": "^16.12.0",
        "react-dom": "^16.12.0",
        "styled-components": "^4.4.1"
    },
    "devDependencies": {
        "@lapidist/linting": "^1.14.0",
        "@types/jest": "^25.1.2",
        "@types/react": "^16.9.17",
        "@types/react-dom": "^16.9.4",
        "@types/react-test-renderer": "^16.9.1",
        "@types/styled-components": "^4.4.1",
        "jest": "^25.1.0",
        "jest-styled-components": "^6.3.4",
        "lerna": "^3.20.2",
        "plop": "^2.5.3",
        "react-test-renderer": "^16.12.0",
        "ts-jest": "^25.0.0",
        "typescript": "^3.7.4"
    },
    "peerDependencies": {
        "react": "^16.12.0",
        "styled-components": "^4.*"
    }
}
